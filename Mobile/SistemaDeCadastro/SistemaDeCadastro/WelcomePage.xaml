<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaDeCadastro.WelcomePage"
             Title="Boas Vindas">
    <ContentPage.Content>
        <StackLayout x:Name="boasVindasVis" BackgroundColor="#000000" Spacing="217">
            <Image Source="logo.png" HorizontalOptions="StartAndExpand" Margin="20,20,0,0"/>
            <Label Text="Seja bem-vindo" FontSize="Title" Padding="30,10,30,10" HorizontalTextAlignment="Center" TextTransform="Uppercase" FontFamily="Raleway" FontAttributes="Bold" TextColor="#FFFFFF"/>
            <Button Text="Iniciar" BackgroundColor="#FA7B3B" TextColor="#FFFFFF" CornerRadius="10" Clicked="btBoasVindas" Margin="0,0,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>